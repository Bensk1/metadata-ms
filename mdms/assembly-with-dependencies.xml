        <fileSet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>mdms-*/**/*.jar</include>
            </includes>
        </fileSet>
    </fileSets> -->
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <binaries>
                <outputDirectory>.</outputDirectory>
                <unpack>false</unpack>
            </binaries>
            <!-- <includes> -->
                <sources>
                    <fileSets>
                      <fileSet>
                        <directory>mdms-*</directory>
                      </fileSet>
                    </fileSets>
                </sources>
                <!-- <include>de.hpi.isg:*</include> -->
            <!-- </includes> -->
        </moduleSet>
    </moduleSets>

</assembly>